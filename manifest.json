{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "1.0",
  "default_locale": "en",
  "name": "No-EM-Dash for ChatGPT & Intellipaper.ai",
  "description": "Replaces the annoying em dashes with your preferred separator.",
  "author": "Matthias Neumayer, Dima Rubanov",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://fragdaspdf.de/*",
    "https://*.fragdaspdf.de/*",
    "https://intellipaper.ai/*",
    "https://*.intellipaper.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://intellipaper.ai/*",
        "https://*.intellipaper.ai/*",
        "https://fragdaspdf.de/*",
        "https://*.fragdaspdf.de/*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
